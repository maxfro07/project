global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']
  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets:
    {% for node_exporter in prometheus.node_exporter %}
      - '{{ node_exporter.host }}:9100'
    {% endfor %}

rule_files:
  - alert.rules.yml

alerting:
  alertmanagers:
  - static_configs:
    - targets:
    {% for alertmanager in prometheus.alertmanager %}
      - '{{ alertmanager.host }}:9093'
    {% endfor %}
